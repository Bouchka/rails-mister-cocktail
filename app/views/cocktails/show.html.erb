<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>

      <div class="list-group">
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item">
            <p><%= dose.description %></p>
            <p><%= dose.ingredient.name %></p>
          </li>
        <% end %>
      </div>

    </div>
  </div>
</div>
